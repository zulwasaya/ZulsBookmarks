</head>
<div data-role="header">

<p><%=if $name
         $name.capitalize
       end
%> Bookmarks </p>

<p>Logged in through <%=if $provider
                           $provider.capitalize end %></p>


<% if @search_string and @search_target then %>
    <p>  <%= "Search results of searching field:#{@search_target} with string:#{@search_string}" %> </p>
   <% end %>
<% if @sort_field and @sort_order then %>
    <p>  <%= "Sort results of sorting #{@sort_field} field with #{@sort_order}ending order" %> </p>
<% end %>
  <%= link_to 'Logout', logout_path, {"data-icon" =>"back", "class" => "ui-btn-right"} %>
<!-- end .header --></div>

<div data-role="content" data-theme="b" data-transition= "flip">


 <nav data-role="navbar" data-inset="false" >

  <ul>


  <li><%= link_to 'Search', searchform_path %> </li>

  <li><%= link_to 'Sort', sortform_path %> </li>

  <li><%= link_to 'Create', new_bookmark_path %> </li>


  <li><%= link_to 'List All', bookmarks_path %> </li>

  <li><%= link_to 'Validate All', check_urls_path %> </li>



  <li><%= link_to 'Delete All', destroy_all_path, data: { confirm: 'Are you sure?' } %> </li>
  </ul>

 <ul>

  <li><%= link_to 'Create Bookmarks from sample HTML file ', from_html_file_path %> </li>

  <li><%= link_to 'Save Bookmarks database to HTML file ', to_html_file_path %> </li>

</ul>

</nav>


                                                                                                                        <br/>
  <% @bookmarks.each do |bookmark| %>


  <div>
   <ul data-role="listview" data-inset="true" data-theme="e">
    <li><a href=<%= bookmark.url%> > <%=bookmark.url%> </a> </li>
     <div data-role="navbar"  data-inset="true">
       <ul>
     <li><%= link_to 'Show', bookmark %> </li>
     <li><%= link_to 'Edit', edit_bookmark_path(bookmark) %> </li>
     <li><%= link_to 'Delete', bookmark, method: :delete, data: { confirm: 'Are you sure?' } %></li>
       </ul>
     </div>

   </ul>
   </div>

  </ul>

<% end %>



  <!-- end .content --></div>


